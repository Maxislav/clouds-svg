{
    "name": "clouds",
    "private": true,
    "version": "1.0.1",
    "type": "module",
    "license": "MIT",
    "scripts": {
        "dev": "vite --port 3200 --open",
        "build": "tsc && vite build",
        "format": "prettier --write \"src/**/*.{js,jsx,ts}\"",
        "preview": "vite preview",
        "build:github": "tsc && vite build",
        "clean": "shx rm -rf release",
        "copy-release": "shx mkdir -p release && shx cp -r dist/* release",
        "build:release": "npm run clean && npm run build && npm run copy-release"
    },
    "devDependencies": {
        "@types/node": "^25.2.2",
        "prettier": "3.7.4",
        "less": "^4.5.1",
        "shx": "^0.4.0",
        "typescript": "~5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-dts": "^4.5.4"
    }
}
